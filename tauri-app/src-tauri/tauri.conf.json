{
  "$schema": "https://schema.tauri.app/config/2",
  "package": {
    "productName": "TauriApp",
    "version": "0.1.0"
  },
  "tauri": {
    "identifier": "com.tauri.app",
    "windows": [
      {
        "title": "Tauri App",
        "width": 800,
        "height": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "allowlist": {
      "fs": {
        "all": true
      },
      "dialog": true,
      "http": {
        "scope": ["https://storage.googleapis.com/**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": ["msi"],
      "identifier": "com.tauri.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
